<body>
    <head1>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" style="background-color: #0c2536; background-image: linear-gradient(160deg, #0c2536 0%, #0c29ca 100%);">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Reminders" asp-action="Index">Mystic To Do</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grows-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reminders"
                                   asp-action="Index">Reminder List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reminders" asp-action="Contacts">Contacts</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

    </head1>
    <body1>
        <div class="container">
            @RenderBody();
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Mystic To Do - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

        <style>
            h1 {
                font-family: "Rakkas", serif;
                font-weight: 500;
                font-style: normal;
                font-size: 40px;
            }

            .rakkas-regular h2 {
                font-family: "Rakkas", serif;
                font-weight: 300;
                font-style: italic;
            }

            h2 {
                margin-left: 50px;
                margin-bottom: 30px;
            }

            input {
                margin-left: 50px;
                margin-top: 20px;
                margin-bottom: 30px;
            }

            th, td {
                border: 1px solid #dddddd;
                text-align: center;
                padding: 8px;
                width: 2px;
            }

            tr:nth-child(even) {
                background: white;
                width: 23px;
            }

        </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

        <script>
            function addTask() {
                var task = document.getElementById("taskInput").value;
                if (task === "") {
                    alert("Please enter a task");
                    return;
                }
                var table = document.getElementById("taskTable");
                var row = table.insertRow(-1);
                var cell1 = row.insertCell(0);
                var cell2 = row.insertCell(1);
                cell1.innerHTML = task;
                cell2.innerHTML = "<button onclick='deleteTask(this)'>Delete</button>";
                document.getElementById("taskInput").value = "";
            }
            function deleteTask(row) {
                var rowIndex = row.parentNode.parentNode.rowIndex;
                document.getElementById("taskTable").deleteRow(rowIndex);
            }
        </script>




@model WebAppRedo.Data.Models.ReminderAddVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reminder</h4>
<hr />

<div class="container text-center"> 
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row justify-content-between">
                    <div class="form-group form-check form-switch col-md-6">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="HasAlarms" /> @Html.DisplayNameFor(model => model.HasAlarms)
                            </label>
                            <span asp-validation-for="HasAlarms" class="text-danger"></span>
                        </div>

                    <div class="form-group form-check form-switch col-md-6">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Periodic" /> @Html.DisplayNameFor(model => model.Periodic)
                            </label>
                            <span asp-validation-for="Periodic" class="text-danger"></span>
                        </div>
                </div>

                <div class="row justify-content-between">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Alarm" class="control-label"></label>
                            <input asp-for="Alarm" class="form-control form-control-sm" />
                            <span asp-validation-for="Alarm" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="TimeFrameSelection" class="control-label"></label>
                            <select asp-for="TimeFrameSelection" class="form-control form-control-sm">
                                <option value="1">Daily</option>
                                <option value="2">Weekly</option>
                                <option value="3">Monthly</option>
                                <option value="4">Yearly</option>
                            </select>
                            <span asp-validation-for="TimeFrameSelection" class="text-danger"></span>
                        </div>
                    </div>
                </div>
         
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>




<dv id="taskInputField ">
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <input type="text" id="taskInput" class="form-control" placeholder="Enter task" />
            </div>
            <div class="col">
                <input type="text" id="taskDescription" class="form-control" placeholder=":Enter description" />
            </div>
            <div class="row">
                <div class="form-check form-switch col-auto">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked">Alarm</label>
                </div>
                <div class="col">
                    <input type="date" id="alarmDate" class="form-control" />
                </div>
                <div class="col">
                    <input type="time" id="alarmTime" class="form-control" />
                </div>
                <div class="row">
                    <div class="form-check form-switch col-auto">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                        <label class="form-check-label" for="flexSwitchCheckChecked">Periodic</label>
                    </div>
                    <div class="col">
                        <input type="date" id="periodicDate" class="form-control" />
                    </div>
                    <div class="col">
                        <input type="time" id="periodicTime" class="form-control" />
                    </div>
                </div>
                <button onclick="addTask()">Add Task</button>
            </div>
</dv> 